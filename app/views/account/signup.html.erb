          <label>Confirm Password</label>
          <div class="ui left icon input">
            <input type="password">
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
        
        </div>
        
        <div class="ui blue submit button">Signup</div>
      </div>
    </div>
    <div class="middle aligned column">
      <%= link_to  '/account/login' do %>
      <div class="ui big button">
        <i class="signup icon"></i>
