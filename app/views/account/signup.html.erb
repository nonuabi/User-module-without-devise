<h2 class="ui center aligned icon header">
  <i class="orange eye icon"></i>
  <div class="content">
    Sign Up Panel
    <div class="sub header">Enter Authentication Detials</div>
  </div>
</h2>
<p><%= notice%></p>
<div class="ui one column stackable center aligned page grid">
  <div class="column forty wide">
    <div class="ui placeholder segment">
      <div class="ui two column very relaxed stackable grid">
        <div class="column">
          <div class="ui form">
            <%= form_with(model: @user) do |form|%>
              <div class="two wide fields">
                <div class="field">
                  <%= form.label :first_name%>
                  <div class="ui left icon input">
                    <%= form.text_field :first_name, placeholder:"First Name"%>
                    <i class="user icon"></i>
                  </div>
                </div>
                <div class="field">
                  <%= form.label :last_name%>
                  <div class="ui left icon input">
                    <%= form.text_field :last_name, placeholder:"Last Name"%>
                    <i class="user icon"></i>
                  </div>
                </div>
              </div>
              <div class="fluid ui field">
                <%= form.label :email%>
                <div class="ui left icon input">
                  <%= form.email_field :email, placeholder:"Email" , type:"email"%>
                  <i class="id badge outline icon"></i>
                </div>
              </div>
              <div class="two wide fields">
                <div class="field">
                  <%= form.label :password%>
                  <div class="ui left icon input">
                    <%= form.password_field :password%>
                    <i class="lock icon"></i>
                  </div>
                </div>
                <div class="field">
                  <%= form.label :confirm_password%>
                  <div class="ui left icon input">
                    <%= form.password_field :confirm_password %>
                    <i class="lock icon"></i>
                  </div>
                </div>
              </div>
              <div class="two wide fields">
                <div class="field">
                  <%= form.label :mobile_number%>
                  <div class="ui left icon input">
                    <%= form.number_field :mobile_number, placeholder:"Mobile Number"%>
                    <i class="mobile alternate icon"></i>
                  </div>
                </div>
                <div class="field">
                  <%= form.label :date_of_birth%>
                  <%= form.text_field :date_of_birth, type:"date"%>
                </div>
              </div>
              <%= form.submit 'Signup', class:"fluid ui orange submit button"%>
            <% end %>
          </div>
        </div>
        <div class="middle aligned column">
          <%= link_to  '/account/login' do %>
          <div class="ui big button">
            <i class="signup icon"></i>
            Log In
          </div>
          <% end %>
        </div>
      </div>
      <div class="ui vertical divider">
        Or
      </div>
    </div>
  </div>
</div>