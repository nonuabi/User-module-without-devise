<h2 class="ui center aligned icon header">
  <i class="orange eye icon"></i>
  <div class="content">
    Log In Panel
    <div class="sub header">Enter Authentication Detials</div>
  </div>
</h2>

    <p><%= notice%></p>

<div class="ui one column stackable center aligned page grid">
  <div class="column forty wide">
    <div class="ui placeholder segment">
      <div class="ui two column very relaxed stackable grid">
        <div class="column">
          <div class="ui form">
            <%= form_with model: @user, local: true do |form|%>
              <div class="field">
                <%= form.label :email%>
                <div class="ui left icon input">
                  <%= form.email_field :email, placeholder:"Email" , type:"email"%>
                  <i class="user icon"></i>
                </div>
              </div>
              <div class="field">
                <%= form.label :password%>
                <div class="ui left icon input">
                  <%= form.password_field :password%>
                  <i class="lock icon"></i>
                </div>
              </div>
    
              <%= form.submit "Login", class:"fluid ui orange submit button"%>
      
              <div class="field">
                  <%= link_to "Forget Your Password? ", '/password/forget'%>
              </div>
            <% end %>
          </div>
        </div>
        <div class="middle aligned column">
            <%= link_to  '/account/signup' do %>
                <div class="ui big button">
                    <i class="signup icon"></i>
                    Sign Up
                </div>
            <% end %>
        </div>
      </div>
      <div class="ui vertical divider">
        Or
      </div>
    </div>
  </div>
</div>